{
    "exclude": ["node_modules", "ts-temp", "lib", "test"],
    "compilerOptions": {
        "outDir": "ts-temp",
        "lib": ["es2015", "es2015.promise", "es2016", "dom"],
        "typeRoots": [
            "node_modules/@types",
            "typings",
            "typings/globals",
            "typings-other"
        ],
        "types": ["node", "assertion", "atma-utest", "jquery"],
        "declaration": true,
        "target": "es2020",
        "module": "commonjs",
        "sourceMap": false,
        "experimentalDecorators": true
    },
    "typedocOptions": {
        "name": "",
        "entryPoints": ["src/alot.ts"],
        "out": "docs"
    }
}
